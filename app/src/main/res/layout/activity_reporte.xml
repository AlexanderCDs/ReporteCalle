<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.example.alexander.reportecalle.ReporteActivity">

    <TextView
        android:id="@+id/ttvFolio"
        android:text="Folio: 23456"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/ievImagen"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/ttvEstado"
        android:text="Estado: Nuevo"
        android:textColor="#000"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/ttvComentario"
        android:text="Comentario, Comentario, Comentario, Comentario, Comentario, Comentario, Comentario, Comentario"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/ttvFecha"
        android:text="Fecha: 2017-01-03"
        android:textColor="#000"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/ttvHora"
        android:text="Hora: 06:34:45 hrs"
        android:textColor="#000"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/ttvDireccion"
        android:text="Dirección: Calle 120 116, Vicente Guerrero, 97320 Progreso, Yuc., México"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

</LinearLayout>
